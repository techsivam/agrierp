{
  "name": "agri-erp-system",
  "version": "1.0.0",
  "description": "Agricultural ERP System - Comprehensive enterprise resource planning solution for agricultural operations",
  "main": "src/index.js",
  "scripts": {
    "dev": "node src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "webpack --mode=production",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "agriculture",
    "erp",
    "farm-management",
    "agricultural-technology",
    "agtech",
    "farming",
    "crop-management",
    "livestock",
    "inventory-management",
    "supply-chain"
  ],
  "author": {
    "name": "TechSivam",
    "email": "contact@techsivam.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techsivam/agrierp.git"
  },
  "bugs": {
    "url": "https://github.com/techsivam/agrierp/issues"
  },
  "homepage": "https://github.com/techsivam/agrierp#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "dotenv": "^16.1.4",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "winston": "^3.9.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "axios": "^1.4.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.1",
    "nodemailer": "^6.9.3"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.43.0",
    "prettier": "^2.8.8",
    "nodemon": "^2.0.22",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "babel-jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
